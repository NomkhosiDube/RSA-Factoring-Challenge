#include <stdio.h>

/* Function to factorize a number and print the result */
void factorize(int n) {
    printf("%d=", n);

    /* Loop to find prime factors */
    for (int i = 2; i <= n; ++i) {
        while (n % i == 0) {
            /* Print prime factor */
            printf("%d", i);

            /* Divide the number by the prime factor */
            n /= i;

            /* Print '*' if there are more prime factors */
            if (n > 1) {
                printf("*");
            }
        }
    }

    printf("\n");
}

int main(int argc, char* argv[]) {
    /* Check if the correct number of command-line arguments is provided */
    if (argc != 2) {
        fprintf(stderr, "Usage: %s <file>\n", argv[0]);
        return 1;
    }

    /* Open the input file for reading */
    FILE* inputFile = fopen(argv[1], "r");

    /* Check if the file was successfully opened */
    if (!inputFile) {
        fprintf(stderr, "Error: Could not open file %s\n", argv[1]);
        return 1;
    }

    int number;
    /* Read numbers from the file and factorize each one */
    while (fscanf(inputFile, "%d", &number) == 1) {
        factorize(number);
    }

    /* Close the input file */
    fclose(inputFile);

    return 0;
}
